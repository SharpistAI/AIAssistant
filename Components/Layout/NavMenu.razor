            <NavLink class="nav-link" href="java" @onclick="()=>expandSubNavOfJava = !expandSubNavOfJava">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Java
            </NavLink>
            @if (expandSubNavOfJava)
            {
                <div class="nested-tabs">
                    <!-- Nested tabs for Course 2 -->
                    <div class="nav-item px-3">
